<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#25aae1">

    <ImageView
        android:layout_width="158dp"
        android:layout_height="131dp"

        android:layout_centerHorizontal="true"
        android:src="@drawable/unpack_font"
        android:id="@+id/title"
        />

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize = "50sp"
        android:textStyle = "bold"
        android:text = "Unpack"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_marginTop = "20dp"/>
        !-->
    <ImageButton
        android:id="@+id/questionnaire_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/title"
        android:onClick="openQuestionnaire"
        android:background="@drawable/take_questionare"
        android:layout_centerHorizontal="true"/>
    <ImageButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/questionnaire_button"
        android:layout_marginTop = "10dp"
        android:id="@+id/resources_button"
        android:onClick="openResources"
        android:background="@drawable/resources_text"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/unpack_logo_small_size"
        android:layout_below="@id/resources_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:text="DISCLAIMER: This is not an official diagnosis. Professional consultation will be necessary to determine whatever is happening. This resource is to provide a starting point on getting help if you need it."
        />

</RelativeLayout>